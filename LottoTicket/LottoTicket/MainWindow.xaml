<Window x:Class="LottoTicket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LottoTicket"
        mc:Ignorable="d"
        Title="MainWindow" Height="605" Width="422">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="25,540,0,0" TextWrapping="Wrap" Text="Enter number of rows(1 to 20)" VerticalAlignment="Top" Height="19" />
        <TextBox x:Name="inputTextbox" HorizontalAlignment="Left" Height="19" Margin="209,540,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="33" RenderTransformOrigin="-0.026,0.258" Text="1" PreviewTextInput="NumberValidationTextBox" />
        <Button Content="Press For ticket" HorizontalAlignment="Left" Margin="266,541,0,0" VerticalAlignment="Top" Width="117" Click="Button_Click" Height="18"/>
        <TextBlock x:Name="TextBoxTickets" HorizontalAlignment="Left" Margin="25,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="504" Width="365" FontSize="16" FontFamily="Courier New" FontWeight="Bold" Background="#B1898888"/>
        <TextBlock x:Name="Errormsg" HorizontalAlignment="Left" Margin="175,525,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="#FFF90707" FontSize="9"/>
    </Grid>
</Window>
